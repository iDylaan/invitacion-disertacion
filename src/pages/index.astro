---
import BaseLayout from "../components/BaseLayout.astro";
import FinisherSection from "../components/FinisherSection.astro";
import CounterDown from "../components/CounterDown.jsx";
import Tecnologias from "../components/Tecnologias.astro";
import Stats from '../components/Stats.astro';
---

<BaseLayout>
	<FinisherSection>
		<div
			id="hero"
			class="flex flex-col items-center justify-center min-h-screen w-screen lg:flex-row lg:items-center lg:justify-center lg:gap-10 p-5 mt-[-50px]"
		>
			<div class="first_mid">
				<div
					id="hero-content"
					class="text-center space-y-6 max-w-xl text-white"
				>
					<h1
						class="font-bold leading-tight lg:text-left lg:text-5xl text-4xl"
					>
						Estás invitado a nuestra disertación 🎓
					</h1>
					<p class="text-xl italic opacity-80 lg:text-left">
						Comenzará en...
					</p>
				</div>
			</div>

			<div class="second_mid">
				<div class="flex justify-center mb-4">
					<CounterDown dateTarget="2025-05-13T10:00:00" client:load />
				</div>
				<span> Martes 13 de mayo a las 10:00 AM </span>
				<br />
				<div
					class="p-4 mb-4 text-sm text-yellow-800 rounded-lg bg-yellow-50 dark:bg-transparent dark:text-yellow-300 italic"
					role="alert"
				>
					<span class="text-sm font-semibold"
						>Por favor, llega 15 minutos antes 🙏</span
					>
				</div>
			</div>
		</div>
	</FinisherSection>
	<section
		id="proyecto"
		class="min-h-screen flex items-center justify-center lg:mt-[300px] mt-[100px]"
	>
		<div class="text-center">
			<h1 class="text-4xl font-bold mb-15">Proyecto</h1>
			<p class="text-2xl underline">
				Sistema de Administración de los Instrumentos del Desempeño
				(SAISD)
			</p>
			<p class="text-xl mt-2">Secretaría de Hacienda y Crédito Público</p>
			<img
				src="/imgs/SAISD_LOGIN.png"
				alt="Login SAISD"
				class="lg:w-[50dvw] sm:w-[75dvw] w-[95dvw] m-auto mt-5 rounded-lg"
			/>
			<hr
				class="my-12 h-0.5 border-t-0 bg-neutral-100 dark:bg-white/10"
			/>
			<p class="text-2xl">Universidad Tecnológica de Nezahualcóyotol</p>
			<p class="text-xl mt-2">División de Informática y Computación</p>
		</div>
	</section>

	<Tecnologias />

	<section
		id="expositores"
		class="min-h-[85dvh] flex items-center justify-center bg-base-200"
	>
		<div class="text-center">
			<h2 class="text-3xl font-bold mb-8">Expositores</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h3 class="text-xl font-bold">
							Daniel Chaparro Marin 👨🏻‍🎓
						</h3>
					</div>
				</div>
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h3 class="text-xl font-bold">
							Brandon Campos Figueroa 👨🏽‍🎓
						</h3>
					</div>
				</div>
			</div>

			<Stats />
		</div>
	</section>

	<section
		id="ubicacion"
		class="min-h-[85dvh] flex items-center justify-center bg-base-200"
	>
		<div class="text-center">
			<h2 class="text-3xl font-bold mb-8">Ubicación</h2>
			<div
				class="card bg-base-100 shadow-xl max-w-md mx-auto"
				data-theme="dracula"
			>
				<div class="card-body">
					<p class="text-lg font-bold">
						Universidad Tecnológica de Nezahualcóyotl
					</p>
					<p class="italic">Universidad Tecnológica de Nezahualcóyotl, Cto. Rey Nezahualcóyotl Manzana 010, Benito Juárez, 57000 Cdad. Nezahualcóyotl, Méx.</p>
					<p class="text-lg font-bold">División de Informática y Computación</p>
					<p class="text-lg font-bold">Sala B-201</p>
					<div class="mt-4">
						<div style="width: 100%">
							<iframe
								width="100%"
								height="300"
								frameborder="0"
								scrolling="no"
								marginheight="0"
								marginwidth="0"
								src="https://maps.google.com/maps?width=100%25&height=600&hl=en&q=19.40405607837225,%20-98.98763716220857+(Universidad%20Tecnol%C3%B3gica%20de%20Nezahualc%C3%B3yotl)&t=&z=18&ie=UTF8&iwloc=B&output=embed"
							></iframe>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section
		id="fin"
		class="w-screen min-h-[100dvw] flex items-center justify-center text-white text-center section-transition mt-[-150px]"
	>
		<div class="text-center space-y-6 max-w-xl">
			<h1 class="text-5xl font-bold leading-tight">¡Nos vemos pronto!</h1>
			<p class="text-xl italic opacity-80">¡No faltes!</p>
		</div>
	</section>
</BaseLayout>
